@page
@model FirstRazerPagesUI.Pages.FilmPhotosModel
@{
    ViewData["Title"] = "FilmPhotos";
}

<div class="container px-5">
    <img class="img-fluid col mlmr-form" style="width:60%" src="~/Media/img041.jpg" />
    <form method="post" class="spacer">
        <div class="row plpr-form">
            <div class="col">
                <input type="text" asp-for="Contact.FirstName" class="form-control" placeholder="First name" required>
                <div class="invalid-feedback">Your first name is required</div>
            </div>
            <div class="col">
                <input type="text" asp-for="Contact.LastName" class="form-control" placeholder="Last name" required>
            </div>
        </div>
        <div class="spacer-3"></div>
        <div class="form-group plpr-form">
            <input asp-for="Contact.Email" type="email" class="form-control" id="exampleFormControlInput1" placeholder="Enter your email: name@example.com" required>
        </div>
        <div class="spacer-3"></div>
        <div class="form-group plpr-form">
            <label for="exampleFormControlTextarea1">Enter your message:</label>
            <textarea asp-for="Contact.Message" class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
        </div>
        <div class="form-group plpr-form">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </form>
</div>
